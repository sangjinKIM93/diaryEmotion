<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="380dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/z_exit"
        android:layout_marginTop="2dp"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:id="@+id/exitBtn"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="감정을 선택해주세요."
        android:textSize="15dp" />


    <Button
        android:id="@+id/embarrassed"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:text="당황"
        android:textSize="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/isolated"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:layout_marginTop="10dp"
        android:text="격리된"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/conscious"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:text="의식하는"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/inferior"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:text="열등한"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/guilty"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:text="죄책감의"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/ashamed"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:layout_marginTop="10dp"
        android:text="부끄러운"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/pathetic"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:layout_marginTop="10dp"
        android:text="한심한"
        android:textSize="20dp"
        android:layout_gravity="center"/>




</LinearLayout>