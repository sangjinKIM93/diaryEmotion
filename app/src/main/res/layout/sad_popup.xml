<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="380dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/z_exit"
        android:layout_marginTop="2dp"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:id="@+id/exitBtn"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="감정을 선택해주세요."
        android:textSize="15dp" />

    <Button
        android:id="@+id/sadBtn"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:text="슬픔"
        android:textSize="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/disappointBtn"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:layout_marginTop="10dp"
        android:text="실망한"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/regretBtn"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:text="후회되는"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/depressBtn"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:text="우울한"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/pessimiBtn"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:text="염세적인"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/tearBtn"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:layout_marginTop="10dp"
        android:text="눈물의 나는"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/dismayBtn"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:background="@color/whiteSmoke"
        android:layout_marginTop="10dp"
        android:text="낭패한"
        android:textSize="20dp"
        android:layout_gravity="center"/>




</LinearLayout>